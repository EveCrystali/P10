<ul class="navbar-nav">
@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item">
       @User.Identity?.Name
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-controller="Auth" asp-action="Logout" 
            asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
