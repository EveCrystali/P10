@{
    ViewData["Title"] = "Home Page";
}
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Patient>

<div class="text-center py-4" style="background: linear-gradient(90deg, #4caf50, #81c784); color: white;">
    <h1 class="display-4">Accueil Médecin</h1>
</div>
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger my-3 text-center">
        @TempData["Error"]
    </div>
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 style="color: #4caf50;">Liste des Patients</h2>
    <div>
        <a asp-controller="Patients" asp-action="Create" class="btn btn-success ms-2">
            <i class="fas fa-user-plus"></i> Créer un nouveau patient
        </a>
        <a asp-controller="TriggerWords" asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="fa-solid fa-gear"></i> Configuration
        </a>
    </div>
</div>
<hr class="my-3" style="border-top: 3px solid #4caf50;"/>
<table class="table table-bordered table-hover">
    <thead class="table-success">
    <tr>
        <th>@Html.DisplayNameFor(model => model.FirstName)</th>
        <th>@Html.DisplayNameFor(model => model.LastName)</th>
        <th>@Html.DisplayNameFor(model => model.DateOfBirth)</th>
        <th class="text-center">Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (Patient patient in Model)
    {
        <tr class="clickable-row" style="cursor: pointer;"
            onclick="window.location='@Url.Action("Details", "Patients", new
                                      {
                                          id = patient.Id
                                      })'">
            <td>@patient.FirstName</td>
            <td>@patient.LastName</td>
            <td>@patient.DateOfBirth.ToString("yyyy-MM-dd")</td>
            <td class="text-center">
                <div class="btn-group" role="group">
                    <a asp-controller="Notes" asp-action="GetNotesFromPatientId" asp-route-patientId="@patient.Id"
                       class="btn btn-secondary">
                        <i class="fas fa-sticky-note"></i> Notes
                    </a>
                    <a asp-controller="Notes" asp-action="Create" asp-route-patientId="@patient.Id"
                       asp-route-lastName="@patient.LastName" asp-route-firstName="@patient.FirstName"
                       class="btn btn-success mx-1">
                        <i class="fas fa-plus"></i> Nouvelle note
                    </a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>