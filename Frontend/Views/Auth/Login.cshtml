@using Microsoft.AspNetCore.Mvc.TagHelpers
@model LoginModel

<form asp-controller="auth" asp-action="login" method="post" novalidate>
    <div class="form-group">
        <label asp-for="Username">
            <input asp-for="Username" class="form-control" required placeholder="Entrez votre nom d'utilisateur"/>
            <span asp-validation-for="Username" class="text-danger"></span>
            Nom d'utilisateur
        </label>
    </div>
    <div class="form-group">
        <label asp-for="Password">
            <input asp-for="Password" class="form-control" type="password" required
                   placeholder="Entrez votre mot de passe"/>
            <span asp-validation-for="Password" class="text-danger"></span>
            Mot de passe
        </label>
    </div>
    @* FUTURE: Add remember me *@
