{
  "index_patterns": [
    "notes_index*"
  ],
  "template": {
    "settings": {
      "number_of_shards": 1,
      "analysis": {
        "analyzer": {
          "custom_french_analyzer": {
            "type": "custom",
            "tokenizer": "standard",
            "filter": [
              "lowercase",
              "french_stem",
              "asciifolding"
            ]
          }
        },
        "filter": {
          "french_stem": {
            "type": "stemmer",
            "language": "light_french"
          }
        }
      }
    },
    "mappings": {
      "properties": {
        "Title": {
          "type": "text",
          "analyzer": "custom_french_analyzer"
        },
        "Body": {
          "type": "text",
          "analyzer": "custom_french_analyzer"
        }
      }
    }
  },
  "priority": 1
}