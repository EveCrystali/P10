@model Frontend.Models.PatientNotesViewModel

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html lang="fr" xml:lang="fr">

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<body>

    <div>
        <h4>Patient</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateOfBirth)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Gender)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Gender)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Address)
           </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
            @if (Model.Notes != null)
            {
                @* ? I am not sure that the cast is mandatory **@
                @foreach (Note? note in Model.Notes.Cast<Frontend.Models.Note>())
                {
                    <dt class="col-sm-2">
                        @Html.DisplayName("Title")
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(_ => note.Title)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayName("Body")
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(_ => note.Body)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayName("LastUpdatedDate")
                    </dt>
                    <dd class="col-sm-10">
                        @if (note.LastUpdatedDate != null)
                        {
                            @Html.DisplayFor(_ => note.LastUpdatedDate)
                        }
                        else
                        {
                            @Html.DisplayFor(_ => note.CreatedDate)
                        }
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayName("PractionnerId")
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(_ => note.PractionnerId)
                    </dd>
                }
            }
        </dl>
    </div>
    <div>
        @Html.ActionLink("Editer", "Edit", new { id = Model.PatientId }) |
        <a asp-controller="Home" asp-action="Index">Retour Ã  la liste</a>
    </div>
</body>

</html>
